#!/usr/bin/env php
<?php

// Autoloader.
$autoloadLocations = [
    getcwd() . '/vendor/autoload.php',
    getcwd() . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];
$loaded = false;
foreach ($autoloadLocations as $autoload) {
    if (is_file($autoload)) {
        require_once($autoload);
        $loaded = true;
    }
}
if (!$loaded) {
    fwrite(STDERR,
        'You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    exit(1);
}

use Jelle_S\QuickStart\Command\Create;
use Jelle_S\QuickStart\Command\Destroy;
use Jelle_S\QuickStart\Command\DrupalSettings;
use Symfony\Component\Console\Application;
use Symfony\Component\Dotenv\Dotenv;

$envLocations = [
    __DIR__ . '/..',
    __DIR__ . '/../../../..',
];

foreach ($envLocations as $env) {
    if (is_file($env . '/.env')) {
        $dotenv = new Dotenv();
        $dotenv->usePutenv(true);
        $dotenv->load($env . '/.env');
        continue;
    }
}

$application = new Application();
$application->add(new Create());
$application->add(new Destroy());
$application->add(new DrupalSettings());

$application->run();
